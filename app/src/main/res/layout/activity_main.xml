<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:DiagramView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back"
    tools:context="com.wpf.diagramdemo.MainActivity">

    <com.wpf.diagram.DiagramView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/diagram"
        DiagramView:color_Diagram_Peak="@color/diagram_peak"
        DiagramView:isShow_YLine="false"
        DiagramView:isShow_Peak_Line="true"
        DiagramView:isShow_YLinePointLine="true"
        DiagramView:isShow_Peak_Point="true"
        DiagramView:isShow_Peak="false"
        DiagramView:isShowLineChart="true"
        DiagramView:width_LineChart="10"
        DiagramView:isShow_Bar="true"
        DiagramView:width_Bar="100"
        DiagramView:color_Diagram_Peak_Point="@color/colorPrimary"
        DiagramView:color_LineChart="@color/colorPrimary"
        DiagramView:color_Diagram_Peak_Line="@color/colorPrimary"
        />

</LinearLayout>